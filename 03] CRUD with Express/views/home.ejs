<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/add" method="post">
        <input type="text" placeholder="Enter your name ..." name="name">
        <input type="text" placeholder="Enter yout city ..." name="city">
        <button type="submit">submit</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>City</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <%student.map((element) => {%>
                <tr>
                    <td><%=element.id%></td>
                    <td><%=element.name%></td>
                    <td><%=element.city%></td>
                    <td><a href="/update/<%=element.id%>"><button>Edit</button></a></td>
                    <td><a href="/delete/?id=<%=element.id%>"><button>Delete</button></a></td>
                </tr>
            <%})%>
        </tbody>
    </table>
</body>
</html>